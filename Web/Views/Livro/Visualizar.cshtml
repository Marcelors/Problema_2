@model Web.Models.ViewLivro

@{
    ViewBag.Title = "Visualizar";
}

<div class="col-sm-12">
    <fieldset>
        <legend>Visualizar Livro</legend>
    </fieldset>
    @Html.Partial("_PartialFeedback")

    @using (Html.BeginForm("Deletar", "Livro", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="NomeGenero" class="col-sm-2 control-label">Nome do Livro</label>
            <div class="col-sm-10">
                <span class="form-control col-sm-12">@Model.NomeLivro</span>
            </div>
        </div>
        <div class="form-group">
            <label for="NomeGenero" class="col-sm-2 control-label">Quantidade de Exemplares</label>
            <div class="col-sm-10">
                <span class="form-control col-sm-12">@Model.QtdExemplares</span>
            </div>
        </div>
        <div class="form-group">
            <label for="NomeGenero" class="col-sm-2 control-label">Genero</label>
            <div class="col-sm-10">
                <span class="form-control col-sm-12">@Model.Genero.NomeGenero</span>
            </div>
        </div>
        <div class="form-group">
            <label for="NomeGenero" class="col-sm-2 control-label">Descrição</label>
            <div class="col-sm-10">
                <span class="form-control col-sm-12">@Model.DescricaoLivro</span>
            </div>
        </div>
        @Html.Hidden("id", Model.IdLivro)
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a class="btn btn-default" href="@Url.Action("Index","Livro")">Voltar</a>
                <a class="btn btn-primary" href="@Url.Action("Editar", "Livro", new RouteValueDictionary(new { id = Model.IdLivro }))">Editar</a>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Dejesa realmente deletar')">Deletar</button>
            </div>
        </div>
    }
</div>

